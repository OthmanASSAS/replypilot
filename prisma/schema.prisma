// filepath: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Analysis {
  id          String   @id @default(cuid())
  url         String
  email       String
  status      String   // "analyzing", "completed", "failed"
  miniReport  Json?    // RÃ©sultats analyse gratuite
  fullReport  Json?    // Rapport complet payant
  createdAt   DateTime @default(now())
  paidAt      DateTime?
}

model Lead {
  id          String   @id @default(cuid())
  url         String
  email       String
  stack       String?
  ipAddress   String?
  createdAt   DateTime @default(now())
}

model Newsletter {
  id          String   @id @default(cuid())
  email       String   @unique
  ipAddress   String?
  createdAt   DateTime @default(now())
}
