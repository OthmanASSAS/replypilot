// filepath: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Analysis {
  id          String   @id @default(cuid())
  url         String
  email       String
  status      String   // "analyzing", "completed", "failed"
  miniReport  Json?    // RÃ©sultats analyse gratuite
  fullReport  Json?    // Rapport complet payant
  createdAt   DateTime @default(now())
  paidAt      DateTime?
}
